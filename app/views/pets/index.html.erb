<div class="container">
  <div class="row">
    <div class="col mt-5">
      <h1>All pets</h1>

      <ul>
        <% @pets.each do |pet| %>
          <li><%= link_to pet.name, pet_path(pet) %></li>
        <% end %>
      </ul>

      <hr>

      <%= link_to "Create a new pet", pets_new_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
